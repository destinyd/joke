<div class="collapse navbar-collapse">
  <ul class="nav navbar-nav">
    <%= content_tag 'li',class: (controller_name == 'jokes' and action_name == 'index') ? 'active' : '' do -%>
      <%= link_to '最新', jokes_url %>
    <% end -%>
    <%= content_tag 'li',class: %(short long image).include?(action_name) ? 'active dropdown' : 'dropdown' do -%>
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">分类 <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <%= content_tag 'li',class: action_name == 'short' ? 'active' : '' do -%>
          <%= link_to '短篇笑料', short_url %>
        <% end -%>
        <%= content_tag 'li',class: action_name == 'long' ? 'active' : '' do -%>
          <%= link_to '长篇笑料', long_url %>
        <% end -%>
        <%= content_tag 'li',class: action_name == 'image' ? 'active' : '' do -%>
          <%= link_to '有图有真相', image_url %>
        <% end -%>
        <%= content_tag 'li',class: action_name == 'video' ? 'active' : '' do -%>
          <%= link_to '视频笑料', video_url %>
        <% end -%>
      </ul>
    <% end -%>
    <%= content_tag 'li',class: %w(funlaile wanfunlaile wufunlaile jionggeshuoshi tag).include?(action_name) ? 'active dropdown' : 'dropdown' do -%>
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">热门 <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <% ENV['HOT_TAGS'].split(',').each do |tag| %>
          <%= content_tag 'li',class: params[:id] == tag ? 'active' : '' do -%>
            <%= link_to tag, tag_url(tag) %>
          <% end -%>
        <% end -%>
      </ul>
    <% end -%>
    <%= content_tag 'li',class: action_name == 'download' ? 'active' : '' do -%>
      <%= link_to '应用下载', download_url %>
    <% end -%>
    <%= content_tag 'li',class: (controller_name == 'joke_offers' and action_name == 'index') ? 'active' : '' do -%>
      <%= link_to '爆笑料', new_joke_offer_url %>
    <% end -%>
  </ul>
  <ul class="nav navbar-nav pull-right">
    <%= render_cell :layouts, :login, user: current_user %>
  </ul>
</div>
