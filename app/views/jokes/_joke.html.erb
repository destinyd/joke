<div class="panel panel-default">
  <div class="panel-heading">
    <%= joke.name %>
  </div>
  <div class="panel-body">
    <% if !joke.imgurl.blank? and joke.imgurl != '0' %>
      <p class="text-center">
        <%= image_tag joke.imgurl %>
      </p>
    <% end -%>
    <p> <%= joke.tags.include?('长篇') ? joke.text.html_safe : joke.text %> </p>
  </div>
  <div class="panel-footer">
    <div class="pull-right"><%= joke.created_at %></div>
    <div class="clearfix"></div>
  </div>
</div>
