<div class="panel panel-default">
  <div class="panel-heading">
    <h1>
      <%= @joke.name %>
    </h1>
  </div>
  <div class="panel-body">
    <% if !@joke.imgurl.blank? and @joke.imgurl != '0' %>
      <p class="text-center">
        <%= image_tag @joke.imgurl %>
      </p>
    <% end -%>
    <p class="text">
      <%= @joke.tags.include?('长篇') ? @joke.text.html_safe : @joke.text %>
    </p>
    <p> &nbsp; </p>
    <p> &nbsp; </p>
    <div class="pull-right">
      <div class="pull-right">
        <%= render "layouts/like" %>
      </div>
      <div class="clearfix"></div>
      <%= render "layouts/share", plus: '' %>
    </div>
    <div class="clearfix"></div>
    <ul class="pager">
      <li class="previous">
        <%= link_to "&larr;".html_safe + @joke.older.name, @joke if @joke.older %>
      </li>
      <li class="next">
        <%= link_to (@joke.newer.name + "&rarr;").html_safe, @joke if @joke.newer %>
      </li>
    </ul>
  </div>
  <div class="panel-footer">
    <!--
    <div class="pinglun">
      评论
    </div>
    -->
    <div class="pull-right timestamp"><%= @joke.created_at %></div>
    <div class="clearfix"></div>
  </div>
</div>

<%= render "layouts/comments" %>
